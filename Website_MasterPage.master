    function closeEditPassword() {
        document.getElementById("EditPassword").style.display = "none";
    }
    window.onclick = function (event) {
        if (event.target == myForm) {
            myForm.style.display = "none";
        }
    }
</script>
<script>
    $(function () {

        var isopen_usermenu = false;
        $(" .user-menu-toggle").on("click", function () {
            if (!isopen_usermenu) {

                // Show menu
                $(".user-menu").show();

                //Change arrow
                $(".simple-arrow").removeClass("simple-arrow").addClass("simple-arrow");

                isopen_usermenu = true;
            } else {

                // Close menu
                $(".user-menu").hide();

                isopen_usermenu = false;
            }
        });
    });

</script>

    // js Đăng nhập
    // không cho phép nhập kí tự khác ngoài số
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode
        if (charCode > 47 && charCode < 58)
            return true;
        else {
            return false;
        }
    }
    function checkNull() {
        var sdt = document.getElementById("<%=txtSDT.ClientID%>");
        var mk = document.getElementById("<%=txtMatKhau.ClientID%>");
        if (sdt.value.trim() == "") {
            //document.getElementById("CheckSDT").style.display = "block";
            swal("Vui lòng nhập số điện thoại đăng nhập!", '', 'warning').then(function () { sdt.focus(); });
            return false;
        }
        if (mk.value.trim() == "") {
            //document.getElementById("CheckMatKhau").style.display = "block";
            swal("Vui lòng nhập mật khẩu đăng nhập!", '', 'warning').then(function () { mk.focus(); });
            return false;
        }
        return true;
    }

</script>

<script>
    function checkMatKhau() {
        var mk = document.getElementById("<%=txtMKCu.ClientID%>");
        var mkMoi = document.getElementById("<%=txtMKMoi.ClientID%>");
        var mkXacNhan = document.getElementById("<%=txtMKXacNhan.ClientID%>");
        if (mk.value.trim() == "") {
            document.getElementById("errorrMKCu").style.display = "inline-block";
            document.getElementById("txtMKCu").style.border = "1px solid red";
            return false;

        } if (mkMoi.value.trim() == "") {
            document.getElementById("errorrMKMoi").style.display = "inline-block";
            document.getElementById("txtMKMoi").style.border = "1px solid red";
            return false;

        } if (mkXacNhan.value.trim() == "") {
            document.getElementById("errorrMKXacNhan").style.display = "inline-block";
            document.getElementById("txtMKXacNhan").style.border = "1px solid red";
            return false;

        }
        DisplayLoadingIcon()
        return true;
    }

